# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/spendify
# OR for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/spendify?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=<REPLACE_WITH_256_BIT_RANDOM_HEX>
JWT_EXPIRE=15m  # Short-lived access tokens
JWT_REFRESH_EXPIRE=7d  # Separate refresh tokens

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Encryption Configuration (AES-256-CBC for card numbers)
# Generate a new key with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# CRITICAL: Keep this key secret! Never commit actual key to version control!
ENCRYPTION_KEY=your_32_byte_encryption_key_in_hex_format_here_64_characters
